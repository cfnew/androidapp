<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="horizontal" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:padding="6dip"
    android:background="@drawable/friend_listitem_bg">

    <ImageView 
    	android:id="@+id/message_listitem_userface"
      	style="@style/user_face_image"/>

	<LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	android:layout_marginLeft="5dip"
    	android:layout_marginTop="8dip"
    	android:orientation="vertical"> 
    	
	    <RelativeLayout 
	        android:id="@+id/message_listitem_title_layout"
	        android:orientation="horizontal" 
	        android:layout_width="fill_parent"  
	        android:layout_marginTop="6dip"
	        android:layout_height="wrap_content">
	        
	        <TextView
			android:id="@+id/message_listitem_username" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:includeFontPadding="false"
			android:paddingLeft="10dip"
			android:textSize="@dimen/text_size_15"
			android:textColor="@color/lightblack"/>
	        
	        <TextView 
	        	android:id="@+id/message_listitem_date" 
	            android:layout_width="wrap_content" 
	         	android:layout_height="wrap_content"
	         	android:layout_alignParentRight="true"
	         	android:paddingRight="13dip"
	         	android:textSize="@dimen/text_size_10"
	         	android:textColor="@color/listitem_gray"/>
	        
	    </RelativeLayout>
        
		

		<RelativeLayout 
	    	android:orientation="horizontal" 
	        android:layout_width="fill_parent"  
	        android:layout_height="wrap_content"
	        android:layout_marginTop="11dip">
	        
	       	<TextView 
	        	android:id="@+id/message_listitem_content" 
	            android:layout_width="wrap_content" 
	         	android:layout_height="wrap_content"
				android:paddingLeft="10dip"
	         	android:textSize="@dimen/text_size_12"
	         	android:textColor="@color/listitem_gray"/>
	       	
        </RelativeLayout>
        
	</LinearLayout>
	
</LinearLayout> 
