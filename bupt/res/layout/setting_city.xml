<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ivory"
    android:orientation="vertical" >
    
    <!-- 设置title栏 -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/widget_head_bg"
        android:gravity="center_vertical" >
        
        <!-- 返回按钮 -->
        <Button
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/register_tab_back"
            android:textSize="15sp"
            android:onClick="back_to_main"/>

        <TextView
            android:id="@+id/tv_home_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="地区"
            android:textColor="@color/lightblack"
            android:textSize="20sp" />

    </RelativeLayout>
   
    <!-- area -->
    <ListView
        android:id="@+id/my_setting_lv_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dip"
        android:layout_marginBottom="20dip"
        android:background="@drawable/ic_preference_single_normal"
        android:gravity="center_vertical" >
        
    </ListView>

</LinearLayout>