<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <!-- 轴  -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/boder"
        android:orientation="vertical" >
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
		    android:layout_alignParentLeft="true"
		    android:background="@drawable/paopao_issue_pic1" />
        <Button
            android:id="@+id/paopao_issue_btn_31"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:background="@null"
            android:orientation="vertical"
            android:onClick="set_current_index_1" />
        <Button
            android:id="@+id/paopao_issue_btn_32"
            android:layout_toRightOf="@+id/paopao_issue_btn_31"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:background="@null"
            android:orientation="vertical"
            android:onClick="set_current_index_2" />
        <Button
            android:id="@+id/paopao_issue_btn_33"
            android:layout_toRightOf="@+id/paopao_issue_btn_32"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:background="@null"
            android:orientation="vertical"
            android:onClick="set_current_index_3" />
    </RelativeLayout>
    <!-- 私密活动-->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@drawable/paopao_detail_bg"
        android:gravity="center_vertical" >
        
        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="15dp"
		    android:background="@drawable/paopao_issue_simi" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="45dp"
		    android:gravity="center"
		    android:text="私密活动："
		    android:textColor="@color/lightlightblack"
		    android:textSize="15sp" android:id="@+id/textView1"/>

        <ToggleButton
            android:id="@+id/paopao_issue_3_tb_simi"
            android:layout_width="80dp"
            android:layout_height="18dp"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="33dp"
            android:background="@drawable/btn_toggle_bg"
            android:textOn=""
            android:textOff=""
            android:textSize="11sp" />
        
    </RelativeLayout>
    
     <!-- 邀请好友 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@drawable/paopao_detail_tag_bg"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/paopao_issue_tianjia" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:text="邀请好友："
            android:textColor="@color/lightlightblack"
            android:textSize="15sp" />

        <ToggleButton
            android:id="@+id/paopao_issue_3_tb_yaoqing"
            android:layout_width="80dp"
            android:layout_height="18dp"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:background="@drawable/btn_toggle_bg"
            android:textOn=""
            android:textOff=""
            android:textSize="11sp" />
    </RelativeLayout>
    
    <!-- 活动地点-->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@drawable/paopao_detail_desc_bg"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/paopao_issue_loca" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:text="寻找伙伴地点："
            android:textColor="@color/lightlightblack"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/paopao_issue_3_iv_huoban"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView2"
            android:layout_marginRight="30dp"
            android:background="@drawable/paopao_issue_didianjia"
            android:onClick="paopao_issue_find_f" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@drawable/boder"
        android:gravity="center_vertical" >
        
        <TextView
            android:id="@+id/paopao_issue_3_tv_floca"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="35dp"
		    android:gravity="center"
		    android:text="我的地点:"
		    android:background="@drawable/preference_single_item"
		    android:textColor="@color/lightlightblack"
		    android:textSize="15sp"/>

         <ImageView
             android:layout_width="35dip"
             android:layout_height="35dip"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="30dp"
             android:background="@drawable/paopao_issue_didianjian" />
        
    </RelativeLayout>
    
    
        

</LinearLayout>