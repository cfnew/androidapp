<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ivory"
    android:orientation="vertical" >
    
    <!-- 设置title栏 -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/widget_head_bg"
        android:gravity="center_vertical" >
        
        <!-- 返回按钮 -->
        <Button
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/register_tab_back"
            android:textSize="15sp"
            android:onClick="back_to_main"/>

        <TextView
            android:id="@+id/tv_home_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="性别"
            android:textColor="@color/lightblack"
            android:textSize="20sp" />
        
    </RelativeLayout>
    
    
    
    <!-- 性别 -->
    <RelativeLayout
        android:id="@+id/my_setting_rl_male"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/preference_first_item"
        android:clickable="true"
        android:onClick="save_male"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="8dp"
            android:text="男"
            android:textColor="@color/lightblack"
            android:textSize="15sp" />
        
        <ImageView
            android:id="@+id/my_setting_iv_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="matrix"
            android:src="@drawable/mm_submenu" />

        
        
        
    </RelativeLayout>
    

 
    <RelativeLayout
        android:id="@+id/my_setting_rl_female"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/preference_last_item"
        android:clickable="true"
        android:onClick="save_female"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:padding="8dp"
            android:text="女"
            android:textColor="@color/lightblack"
            android:textSize="15sp" />
        
        <ImageView
            android:id="@+id/my_setting_iv_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="matrix"
            android:src="@drawable/mm_submenu" />

        
        
    </RelativeLayout>
    

</LinearLayout>
