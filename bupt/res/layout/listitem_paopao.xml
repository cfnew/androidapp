<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/paopao_item_1_11">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/paopao_listitem_framelayout01"	>
        	
        <ImageView
		    android:id="@+id/paopao_listitem_pic"
		    style="@style/paopao_item_image"/>
		
		<TextView
		    android:id="@+id/paopao_listitem_time_flag"
		    android:layout_width="40dp"
        	android:layout_height="40dp"
        	android:layout_marginLeft="13dip"
        	android:paddingTop="-5px"
        	android:textSize="15sp"
        	android:gravity="center_horizontal"
        	android:textColor="@color/white"
        	android:background="@drawable/paopao_time_flag_09"/>
		
	</RelativeLayout>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="@dimen/paopao_item_pic"
	    android:orientation="vertical"
	    android:background="@color/white">
	
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="6dip"
	        android:paddingLeft="6dip"
	        android:orientation="horizontal">
	    
		    <TextView
		        android:id="@+id/paopao_listitem_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:includeFontPadding="false"
		        android:padding="6dip"
		        android:textSize="@dimen/text_size_16"
		        android:textColor="@color/listitem_blue"/>
		    
		    <TextView 
	            android:id="@+id/paopao_listitem_join_need_num"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="6dip"
	            android:layout_gravity="center_vertical"
	            android:textSize="@dimen/text_size_12"
	            android:textColor="@color/listitem_black"/>
	    
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="12dip">
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:src="@drawable/widget_user_location"/>
	        
	        <TextView 
	            android:id="@+id/paopao_listitem_location"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="6dip"
	            android:layout_gravity="center_vertical"
	            android:textSize="@dimen/text_size_12"
	            android:textColor="@color/listitem_black"/>
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="12dip"
	        android:layout_marginTop="6dip"
	        android:orientation="horizontal">
	        
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:src="@drawable/widget_user_loctime"/>
	        
	        <TextView 
	            android:id="@+id/paopao_listitem_start_time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="6dip"
	            android:textSize="@dimen/text_size_12"
	            android:textColor="@color/listitem_black"/>	        
	    </LinearLayout>
	    
	    <RelativeLayout
	        android:id="@+id/paopao_lbs"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:paddingLeft="6dip"
	        android:orientation="horizontal"
	        android:layout_gravity="bottom">
	        
	        <TextView 
	            android:id="@+id/paopao_listitem_LBS"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:layout_alignParentRight="true"
	            android:textSize="@dimen/text_size_12"
	            android:textColor="@color/listitem_black"/>
	        
	    </RelativeLayout>
	</LinearLayout>
    
</LinearLayout>
