<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical" >
    
    <RelativeLayout
       android:layout_width="fill_parent"
       android:layout_height="40dp"
       android:background="@drawable/widget_head_bg"
       android:orientation="vertical" 
       android:layout_alignParentTop="true"
       android:id="@+id/issue_share_add_title"
       >

       <TextView
           android:layout_width="fill_parent"
           android:layout_height="40dp"
           android:gravity="center"
           android:text="@string/issue_share_add_label"
           android:textColor="@color/lightblack"
           android:textSize="20.0dip" />
       
       <ImageButton
    	    android:id="@+id/issue_share_add_return"
    	    android:layout_width="wrap_content"
    		android:layout_height="40dp"
    		android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="2.0dip"
			android:background="@drawable/head_back"/>

   </RelativeLayout>
   
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="120dp"
       android:id="@+id/issue_share_add_share_label_parent"
       android:orientation="vertical"
       android:layout_below="@id/issue_share_add_title"
       >
       <TextView 
           android:layout_width="fill_parent"
       	   android:layout_height="wrap_content"
      	   android:id="@+id/issue_share_add_share_label"
      	   android:textSize="30sp"
      	   android:textColor="@color/black"
           />
       <TextView 
           android:layout_width="fill_parent"
       	   android:layout_height="wrap_content"
      	   android:id="@+id/issue_share_add_share_title"
      	   android:textSize="30sp"
      	   android:textColor="@color/black"
           />
   </LinearLayout>
    
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:id="@+id/issue_share_add_get_pic_parent"
       android:layout_below="@id/issue_share_add_share_label_parent" >
	     <Button
	        android:id="@+id/issue_share_add_get_pic"
	        android:layout_width="180dp"
	        android:layout_height="35dp"
	        android:layout_gravity="center_horizontal"
	        android:background="@drawable/widget_head_bg"
	        android:text="@string/issue_share_add_get_pic"
	        android:textColor="@color/lightlightblack"
	        android:textSize="15sp" />
	     
	     <EditText
        	android:layout_width="match_parent"
        	android:layout_height="150dp"
        	android:id="@+id/issue_share_add_discribe"
        	android:background="@drawable/preference_single_item"
        	android:inputType="textMultiLine"
   			android:gravity="left|top"
  			android:minLines="6"
        	>
    	</EditText>
     </LinearLayout>
     
    
     
     <Button
        android:id="@+id/issue_share_add_submit_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/widget_head_bg"
        android:text="@string/issue_share_add_submit_share"
        android:textColor="@color/lightlightblack"
        android:textSize="15sp" />
     
</RelativeLayout>
