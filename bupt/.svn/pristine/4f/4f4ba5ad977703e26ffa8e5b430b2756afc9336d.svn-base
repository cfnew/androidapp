<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main_relativelayout_header" 
  	android:layout_width="fill_parent" 
  	android:layout_height="48dp"
  	android:background="@drawable/widget_head_bg">
  	
    <ImageView
    	android:id="@+id/main_head_logo"
  		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="5.0dip"
		android:src="@drawable/frame_logo"/>
    
    <TextView 
        android:id="@+id/main_head_title"
        style="@style/main_head_title"
		android:layout_toRightOf="@id/main_head_logo"
		android:layout_centerVertical="true"
		android:gravity="center"
		android:layout_marginLeft="5.0dip"
		android:text="活动"/>
		
	<!--  <Spinner
	    android:layout_toRightOf="@id/main_head_logo"
		android:layout_centerVertical="true"
		android:layout_marginLeft="5.0dip"
       	android:id="@+id/action_bar_menu"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:entries="@array/action_bar_menu"/> -->
         
   	<ProgressBar 
		android:id="@+id/main_head_progress" 
		style="@style/loading_small"
		android:layout_toRightOf="@id/main_head_title"
		android:layout_centerVertical="true"
		android:layout_marginLeft="5.0dip"
		android:visibility="gone"/>
   	
    <ImageButton
    	android:id="@+id/main_head_uface"
  		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:layout_marginRight="2.0dip"
		android:background="@drawable/icon"/>
   	
    <ImageButton
    	android:id="@+id/main_head_share_post"
  		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:layout_marginRight="2.0dip"
		android:background="@drawable/frame_icon_post"
		android:visibility="gone"/>
		
    <ImageButton
    	android:id="@+id/main_head_friend_search"
	  	android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:layout_marginRight="2.0dip"
		android:background="@drawable/search_bar_icon_normal"
		android:visibility="gone"/>
</RelativeLayout>
