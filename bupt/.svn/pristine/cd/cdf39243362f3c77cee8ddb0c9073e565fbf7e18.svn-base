<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <!-- 设置title栏 -->
    <include layout="@layout/header_pp_detail" />   
    
    <com.example.bupt.widget.QScrollView 
	    android:layout_width="fill_parent"  
	    android:layout_height="fill_parent" 
	    android:layout_marginBottom="60dp"
	    android:scrollbars="vertical"  
	    android:fadingEdge="vertical" >  
	    <LinearLayout  
	        android:layout_width="fill_parent" 
	        android:layout_height="fill_parent"
	        android:orientation="vertical"  
	        android:scrollbars="vertical" >
	        
	        <!-- 活动 -->
	        <LinearLayout
	            android:layout_width="fill_parent" 
	        	android:layout_height="wrap_content"
	        	android:orientation="vertical"
	        	android:background="@drawable/paopao_detail_bg" >
	            
		        <!-- 活动题目 -->
		        <LinearLayout 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingLeft="12dip"
			        android:orientation="horizontal" >
			        
		            <ImageView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="6dip"
			            android:layout_gravity="center_vertical"
			            android:src="@drawable/paopao_detail" />
			    
				    <TextView
				        android:id="@+id/paopao_detail_tv_title"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:includeFontPadding="false"
				        android:padding="6dip"
				        android:textSize="@dimen/text_size_16"
				        android:textColor="@color/lightblack" />
				    
				    <TextView 
			            android:id="@+id/paopao_detail_join_need_num"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="6dip"
			            android:layout_gravity="center_vertical"
			            android:textSize="@dimen/text_size_12"
			            android:textColor="@color/lightblack" />
			    
			    </LinearLayout>
			    
			    <!-- 活动地点 -->
			    <LinearLayout 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingLeft="45dip"
			        android:orientation="horizontal" >
			        <ImageView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center_vertical"
			            android:src="@drawable/widget_user_location" />
			        
			        <TextView 
			            android:id="@+id/paopao_detail_tv_location"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="6dip"
			            android:layout_gravity="center_vertical"
			            android:textSize="@dimen/text_size_12"
			            android:textColor="@color/lightblack" />
			    </LinearLayout>
			    
			    <!-- 活动时间 -->
			    <LinearLayout 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingLeft="45dip"
			        android:layout_marginTop="3dip"
			        android:orientation="horizontal" >
			        
			        <ImageView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center_vertical"
			            android:src="@drawable/widget_user_loctime" />
			        
			        <TextView 
			            android:id="@+id/paopao_detail_tv_time"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="6dip"
			            android:textSize="@dimen/text_size_12"
			            android:textColor="@color/lightblack" />
			        
			    </LinearLayout>
	        
	        </LinearLayout>
	        
	        <!-- 活动标签 -->
	        <LinearLayout
	            android:layout_width="fill_parent" 
	        	android:layout_height="wrap_content"
	        	android:orientation="vertical"
	        	android:background="@drawable/paopao_detail_tag_bg" >
	            
		        <!-- 活动标签 -->
		        <LinearLayout 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="6dip"
			        android:paddingLeft="12dip"
			        android:orientation="horizontal" >
			        
		            <ImageView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center_vertical"
			            android:src="@drawable/paopao_detail_tag" />
			    
				    <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:includeFontPadding="false"
				        android:padding="6dip"
				        android:text="活动标签"
				        android:textSize="@dimen/text_size_16"
				        android:textColor="@color/lightblack" />
				    
			    </LinearLayout>
			    <!-- 活动标签 -->
			    <LinearLayout 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingLeft="36dip"
			        android:layout_marginTop="6dip"
			        android:orientation="horizontal" >
			        
			        <TextView 
			            android:id="@+id/paopao_detail_tv_tag"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="6dip"
			            android:gravity="center"
			            android:textSize="@dimen/text_size_12"
			            android:textColor="@color/white"
			            android:background="@drawable/tag_bg_blue"/>
			    </LinearLayout>
			    
	        </LinearLayout>
	        
	        
	        <!-- 活动详情 -->
	        <LinearLayout
	            android:layout_width="fill_parent" 
	        	android:layout_height="wrap_content"
	        	android:orientation="vertical"
	        	android:background="@drawable/paopao_detail_desc_bg" >
	            
		        <!-- 活动详情 -->
		        <LinearLayout 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="6dip"
			        android:paddingLeft="12dip"
			        android:orientation="horizontal" >
			        
		            <ImageView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center_vertical"
			            android:src="@drawable/paopao_detail_desc" />
			    
				    <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:includeFontPadding="false"
				        android:padding="6dip"
				        android:text="活动描述"
				        android:textSize="@dimen/text_size_16"
				        android:textColor="@color/lightblack" />
				    
			    </LinearLayout>
			    <!-- 活动描述 -->
			    <LinearLayout 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingLeft="36dip"
			        android:layout_marginTop="6dip"
			        android:orientation="horizontal" >
			        
			        <TextView 
			            android:id="@+id/paopao_detail_tv_details"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="6dip"
			            android:layout_gravity="center_vertical"
			            android:textSize="@dimen/text_size_12"
			            android:textColor="@color/lightblack" />
			    </LinearLayout>
			    
	        </LinearLayout>
	        
	        <LinearLayout  
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"  
	            android:background="@drawable/paopao_detail_ufaces_bg" 
	            android:fillViewport="true">  
	         <com.example.bupt.widget.HorizontalListView
	                android:id="@+id/paopao_detail_hlv_view" 
	                android:layout_height="80dp"
	                android:layout_width="fill_parent" 
	                android:gravity="center"
	                android:padding="5dp" />
	        </LinearLayout> 
	        
	        <!-- 按钮 -->
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:orientation="vertical"
		        android:layout_gravity="center">
		        <TextView 
		            android:id="@+id/paopao_detail_tip"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="12dip"
		            android:layout_marginBottom="5dip"
		            android:gravity="center"
		            android:textSize="@dimen/text_size_12"
		            android:textColor="@color/lightblack"/>
		        <TextView
		            android:id="@+id/paopao_detail_btn"
		            android:layout_width="fill_parent"
		            android:layout_height="48dp"
		            android:gravity="center"
		            android:textColor="@color/white"
		            android:textSize="@dimen/text_size_20"
		            android:clickable="true"
		            android:background="@color/lightblue"/>
		    </LinearLayout>
	        
	    </LinearLayout>  
	    
    </com.example.bupt.widget.QScrollView>  
      
</LinearLayout>