<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"  
   android:layout_width="fill_parent"  
   android:layout_height="fill_parent"  
   android:orientation="vertical" >

    <RelativeLayout
       android:layout_width="fill_parent"
       android:layout_height="40dp"
       android:layout_alignParentTop="true"
       android:background="@drawable/widget_head_bg"
       android:orientation="vertical" >

       <TextView
           android:layout_width="fill_parent"
           android:layout_height="40dp"
           android:gravity="center"
           android:text="一个新活动"
           android:textColor="@color/black"
           android:textSize="20.0dip" />

       <TextView
           android:layout_width="80dp"
           android:layout_height="fill_parent"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:onClick="back_to_main"
           android:clickable="true"
           android:gravity="center"
           android:text="返回主页"
           android:textColor="@color/lightlightblack"
           android:textSize="15sp" />

    </RelativeLayout>
    
    <RelativeLayout
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_marginTop="40dp"
       android:background="@color/white"
       android:orientation="vertical" >
       
       <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="55dp"
           android:background="@drawable/boder"
           android:clickable="true"
           android:onClick="paopao_issue_publiucgame"
           android:gravity="center_vertical" >
        
           <ImageView
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_centerVertical="true"
		       android:layout_alignParentRight="true"
		       android:layout_marginRight="20dp"
		       android:background="@drawable/mm_submenu" />
           <TextView
               android:layout_width="80dp"
               android:layout_height="35dp"
               android:layout_centerVertical="true"
	   	       android:layout_alignParentLeft="true"
		       android:layout_marginLeft="40dp"
		       android:gravity="center"
	      	    android:text="公开活动"
	      	    android:textColor="@color/lightblack"
	   	       android:textSize="15sp"/>     
       </RelativeLayout>
       
       <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="55dp"
           android:layout_marginTop="55dp"
           android:background="@drawable/boder"
           android:clickable="true"
           android:onClick="paopao_issue_privategame"
           android:gravity="center_vertical" >
        
           <ImageView
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_centerVertical="true"
		       android:layout_alignParentRight="true"
		       android:layout_marginRight="20dp"
		       android:background="@drawable/mm_submenu" />
           <TextView
               android:layout_width="80dp"
               android:layout_height="35dp"
               android:layout_centerVertical="true"
	   	       android:layout_alignParentLeft="true"
		       android:layout_marginLeft="40dp"
		       android:gravity="center"
	      	    android:text="私密活动"
	      	    android:textColor="@color/lightblack"
	   	       android:textSize="15sp"/>     
       </RelativeLayout>
    
       
       
       
       </RelativeLayout>
       
   
    

</RelativeLayout>
